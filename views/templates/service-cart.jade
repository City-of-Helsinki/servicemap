if minimized
  li.personalisation-container
    .maximizer
      span.icon-icon-map-options
else
  li.info-box
    = t('service_cart.currently_on_map')
        span.button(class="cart-close-button")
          span.icon-icon-close
  li.map-layer
    div.map-layers
      span.layer-icon.icon-icon-map-options
      p. Karttapohja
      for layer in layers
        if layer.selected
          - checked = 'checked'
        else
          - checked = null
        label.layer(data-layer=layer.name)
          //a(class=cls, data-layer=layer.name)
          input(type='radio', name='map-layers', value!=layer.name, checked=checked, class=cls)
          | &nbsp;
          = t('service_cart.' + layer.name)

  each item in items
    li.services
      a(href="##{item.id}")
        div(class="color-ball service-background-color-#{item.root}")
        div(class="service-name service-color-#{item.root}")
          = item.name
      div.button(class="close-button", data-service="#{item.id}")
        span.icon-icon-close
