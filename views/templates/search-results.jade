if !hidden
  if expanded
    div.header-item.expanded-search-results
      a.back-button(href="#", role="button", tabindex="0")
        span.icon-icon-back-bold
        span.breadcrumbs
          = t('sidebar.search_results')
        br
        = header
  else
    div.header-item= header
  div.result-contents
  if showAll
    a(href="#", data-target!=target).show-prompt.show-all= showAll
  if showMore
    a(href="#").show-prompt.show-more= t('sidebar.show_more')
