ul.navi.service-tree.new-content
  if back
    li.service.parent(data-service-id!=back, data-slide-direction="right")
      .item-name
        span
          span.icon-icon-back
          = heading
  else
    li.info-box.= t('sidebar.browse_tip')
  each item in list_items
    li(class!=item.classes data-service-id!=item.id, data-slide-direction="left" role="link", tabindex="0")
      .item-name
        span= item.name
      if item.selected
        a.show-button.selected(href="#", role="button", tabindex="0")= t('sidebar.hide')
      else
        a.show-button(href="#", role="button", tabindex="0")= t('sidebar.show')
      if item.has_children
        span.icon-icon-forward
