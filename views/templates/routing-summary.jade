#route-details.section-content.collapse
  each itinerary in itineraries
    div.legs
    each leg in itinerary.legs
     div.leg
        case leg.mode
          when "WALK"
            span.icon-icon-by-foot
            span
            | &nbsp;
            span.mode. KÃ¤vely
          when "BUS"
            span.icon-icon-public-transport
            span
            | &nbsp;
            span.mode. Linja-auto
          when "TRAM"
            span.icon-icon-public-transport
            span
            | &nbsp;
            span.mode. Raitiovaunu
          when "SUBWAY"
            span.icon-icon-public-transport
            span
            | &nbsp;
            span.mode. Metro
          when "RAIL"
            span.icon-icon-public-transport
            span
            | &nbsp;
            span.mode. Juna
          when "FERRY"
            span.icon-icon-public-transport
            span
            | &nbsp;
            span.mode. Lautta
          when "WAIT"
            //span.icon-icon-public-transport
            span.mode. (odotus)
          default
            span
            span.mode.unknown
            = leg.mode

        if leg.mode == "TRAM" || leg.mode == "RAIL" || leg.mode == "BUS"
         span
         | &nbsp;
         span.number
         = leg.route

        if leg.mode != "WAIT"
         span.duration
         = " (" + parseInt(leg.duration / 60)  + "m)"


