include ./mixins/personalisation-mode

mixin renderCity(id)
  - label = "label-municipality-" + id
  li(data-group='city', data-type=id)
    a(href="#", role="button", aria-described-by=label, tabindex="0")
      .icon
        span(class!="icon-icon-coat-of-arms-#{id}")
      span.text(id=label)
        = t('municipality.' + id)


.personalisation-header
  .selected-personalisations
  a.personalisation-button(href="#", role="button", tabindex="0")
    span.icon-icon-personalise
    h2.text= t('personalisation.personalise')
  a.ok-button(href="#", role="button", tabindex="0")
    | OK
.personalisation-content
  // .section
  //   h3= t('personalisation.my_location')
  //   .location-controls
  //     .input-container
  //       input.form-control(type="text", placeholder!=t('personalisation.enter_address'))
  //     .link-container
  //       a.select-on-map(href="#")
  //         != t('personalisation.select_on_map')
  .section
    h3= t('personalisation.hearing_and_sight')
    ul.personalisations
      +renderMode('senses', 'hearing_aid', 'hearing-aid')
      +renderMode('senses', 'visually_impaired', 'visually-impaired')
      +renderMode('senses', 'colour_blind', 'colour-blind')
  .section
    h3= t('personalisation.mobility')
    ul.personalisations
      +renderMode('mobility', 'wheelchair', 'wheelchair')
      +renderMode('mobility', 'reduced_mobility', 'reduced-mobility')
      +renderMode('mobility', 'rollator', 'rollator')
      +renderMode('mobility', 'stroller', 'stroller')
  .section
    h3= t('personalisation.city')
    ul.personalisations.coats-of-arms
      +renderCity('helsinki')
      +renderCity('espoo')
      +renderCity('vantaa')
      +renderCity('kauniainen')
.personalisation-message.sm-popup.open
  .arrow.top
  span.icon.icon-icon-wheelchair
  span.close-button(type="button")
    span.icon-icon-close
  a(href="#")= t('personalisation.personalisation_message')
