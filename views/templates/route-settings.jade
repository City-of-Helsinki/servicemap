a.settings-summary(href="#", class=!origin_is_pending ? 'de-emphasized' : undefined)
  span.icon-icon-settings
  .icons
    span.icon-icon-stroller
    span.separator &middot;
    | Only&nbsp;
    span.icon-icon-subway
    span.icon-icon-train
  span.origin-name
    if !origin_is_pending
      = t('transit.route_settings.from')
    = ' ' + origin_name
div.settings-header
  h3
    span.icon-icon-settings
    = t('transit.route_settings.route_settings')
  a.ok-button(href="#", role="button", tabindex="0")
    | OK

.settings-content
  .route-controllers

  h3= t('transit.route_settings.accessibility_options')
  .accessibility-viewpoint-part

  h3= t('transit.route_settings.transport_options')
  .transport_mode_controls
