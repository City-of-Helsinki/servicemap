- resultClass = object_type == 'service' ? 'search-result--service' : ''
a.search-result(class=resultClass href="#")
  if object_type == 'service'
    span.icon.icon-icon-browse
  if object_type == 'unit'
    - rootId = (root_service_nodes && root_service_nodes.length) ? root_service_nodes[0] : 0
    div(class="color-ball service-node-background-color-#{rootId}")
  if object_type == 'address'
    span.icon.icon-icon-address
  span.title
    = name
  if specified_text !== undefined
    span.specifier
      = specifier_text
  if distance !== undefined
    span.specifier.distance
      = humanDistance(distance)
  if shortcomings !== undefined
    span.specifier.shortcomings
      = humanShortcomings(shortcomings)
  if contract_type
    span.specifier.contract-type
      = tAttr(contract_type.description)
